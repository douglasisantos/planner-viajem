{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"], // Atualizado para es2016
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
